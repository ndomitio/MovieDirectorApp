@model IEnumerable<MovieDirectorApp.Models.Director>
<script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
<link href="~/DirectorsIndex.css" rel="stylesheet" />

@{
    /**/

    ViewBag.Title = "Index";
}

<h1 class="logo">
    <span class="word1"></span>
    <span class="word2">Directors</span>
</h1>



<iframe style="width:100%; height:60vh; margin-top:50px;margin-bottom:50px;" src="https://www.youtube.com/embed/jA_2uQ-27vI?autoplay=1"></iframe>

<a class="btn btn-default" href="@Url.Action("Create", "Movies")"><i class="fas fa-user-plus"></i></a>


<div class="row" style="margin-top:50px; font-size:20px;">


    @foreach (var item in Model)
    {
        <ul>
            <h>
                @Html.DisplayFor(modelItem => item.Name)
            </h>
            <li>
                @Html.ActionLink("Edit", "Edit", new { id = item.DirectorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DirectorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DirectorID })|
                <a href="https://www.imdb.com/" class="fab fa-imdb" style="font-size:48px;color:yellow;"></a>

            </li>
        </ul>
    }

</div>
